<% layout("./layouts/layout.eta") %>
<header>
  <h1>Shared shopping lists</h1>
  </header>

<% const hasLists = Number(it.lists_num) !== 0; %>
<% if (hasLists) { %>
  <section>
    <header><p>Statistic:</p></header>
    <ul>
      <li>Lists: <%= it.lists_num %></li>
      <li>Items: <%= it.items_num %></li>
    </ul>
  </section>
<% } else { %>
  <p>No shopping lists yet.</p>
<% } %>

<a href="/lists">List</a>
